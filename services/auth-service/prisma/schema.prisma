generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/auth.db" 
}

model UserAuth {
  id  String @id @default(uuid())
  email String @unique
  username String @unique
  passwordHash String
  userId Int
  isTFAEnabled Boolean @default(false)
  TFASecret String?
  backupCodes String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@map("users_auth")
}
