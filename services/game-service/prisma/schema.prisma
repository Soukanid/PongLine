
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/game.db.sqlite" 
}

model player {
  use_id          Int       @id @default(autoincrement())

  sender_id   Int
  receiver_id Int

  type        String
  content     String

  delivered   Boolean   @default(false) 
  read        Boolean   @default(false)

  sent_at      DateTime  @default(now())
}

