
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/chat.db.sqlite" 
}

model Message {
  id          Int       @id @default(autoincrement())

  sender_id   Int
  receiver_id Int

  content     String

  delivered   Boolean   @default(false) 
  read        Boolean   @default(false)

  created_at      DateTime  @default(now())
}
