
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/chat.db.sqlite" 
}

model Message {
  id          Int       @id @default(autoincrement())

  sender_id   Int
  receiver_id Int

  content     String

  delivered   Boolean   @default(false) 
  read        Boolean   @default(false)

  sent_at      DateTime  @default(now())
}

model Block {
  id        Int      @id @default(autoincrement())
  blockerId Int      // The person who clicked "Block"
  blockedId Int      // The person getting blocked
  createdAt DateTime @default(now())

  // to ensure that we don't block twice < just in case ;) >
  @@unique([blockerId, blockedId])
}
